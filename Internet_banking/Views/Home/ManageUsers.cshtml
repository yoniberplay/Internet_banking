@{
    ViewData["Title"] = "Manager Users";
}

<div class="w-100 bg-whitegray d-flex flex-column justify-content-start align-items-start" style="height: 82.4vh">
   
    <!-- this is the title -->
    <section class="bg-purple w-100 p-2 d-flex flex-row justify-content-between align-items-center">
        <div>
            <h2 class="text-white m-0">Dashboard / Manage Users</h2>
            <small class="m-0 text-white">This section is for manage clients and other admins</small>
        </div>

        <a asp-controller="Home" asp-action="Create" class="btn btn-light">
            Add a new user
        </a>
    </section>

    <section class="w-100 h-100 bg-whitegray d-flex flex-row justify-content-center gap-2 align-items-center">
        
        <!-- Reading the users -->
        <div class="w-75 h-75 table-responsive bg-white rounded">
            <table class="table table">
              <thead>
                <tr class="text-center">
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Surname</th>
                  <th scope="col">ID number</th>
                  <th scope="col">Username</th>
                  <th scope="col">Role</th>
                  <th scope="col">Username</th>
                  <th scope="col">IsActive</th>
                  <th scope="col">Action </th>
                </tr>
              </thead>
              <tbody>
                <tr class="align-middle text-center">
                  <th scope="row">1</th>
                  <td>Mark</td>
                  <td>Otto</td>
                  <td>402-3190715-1</td>
                  <td>mark4</td>
                  <td>client</td>
                  <td>mark4</td>
                  <td>No Active</td>
                  <td> 
                      <div class="w-full d-flex flex-row justify-content-between align-items-center">
                          <button class="mx-2 w-50 btn btn-purple d-flex flex-row justify-content-evenly align-items-center">
                              <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                                  <path d="M.5 9.5l-.354-.354L0 9.293V9.5h.5zm9-9l.354-.354a.5.5 0 00-.708 0L9.5.5zm5 5l.354.354a.5.5 0 000-.708L14.5 5.5zm-9 9v.5h.207l.147-.146L5.5 14.5zm-5 0H0a.5.5 0 00.5.5v-.5zm.354-4.646l9-9-.708-.708-9 9 .708.708zm8.292-9l5 5 .708-.708-5-5-.708.708zm5 4.292l-9 9 .708.708 9-9-.708-.708zM5.5 14h-5v1h5v-1zm-4.5.5v-5H0v5h1zM6.146 3.854l5 5 .708-.708-5-5-.708.708zM8 15h7v-1H8v1z" fill="currentColor"></path>
                              </svg>
                              Edit
                          </button>
                          <button class="w-50 btn btn-purple d-flex flex-row justify-content-evenly align-items-center" data-toggle="modal" data-target="#exampleModal">
                              <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20">
                                  <path d="M7.5 14.5A7 7 0 013.17 2M7.5.5A7 7 0 0111.83 13m-.33-3v3.5H15M0 1.5h3.5V5" stroke="currentColor"></path>
                              </svg>
                              Change
                          </button>
                          <button class="w-50 mx-2 btn btn-danger d-flex flex-row justify-content-evenly align-items-center">
                              <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M4.5 3V1.5a1 1 0 011-1h4a1 1 0 011 1V3M0 3.5h15m-13.5 0v10a1 1 0 001 1h10a1 1 0 001-1v-10M7.5 7v5m-3-3v3m6-3v3" stroke="currentColor"></path></svg>
                              Drop
                          </button>
                      </div>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>

    </section>

</div>

<!-- Modal -->
